<openerp>
    <data>

        <record id="product_category_add_code_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="code"/>
                </field>
            </field>
        </record>

        <record id="product_brand_add_code_form" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="inherit_id" ref="product_brand.view_product_brand_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="code"/>
                    <field name="not_compute_joking"/>
                </field>
            </field>
        </record>

        <record id="view_product_brand_tree_product_joking" model="ir.ui.view">
            <field name="name">product.brand.form.product.joking</field>
            <field name="model">product.brand</field>
            <field name="inherit_id" ref="product_brand.view_product_brand_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="not_compute_joking"/>
                    <field name="products_count" string="Products"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
