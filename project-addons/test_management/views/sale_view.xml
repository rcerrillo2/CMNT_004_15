<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_add_tests" model="ir.ui.view">
        <field name="name">sale.order.form.add_tests</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                    <field name="tests"/>
                    <button name="set_tests" type="object" string="Set" attrs="{'invisible': ['|',('tests', '=', True),('state', 'in', ['cancel'])]}" colspan="1" groups="test_management.group_test_manager" />
                    <button name="unset_tests" type="object" string="Unset" attrs="{'invisible': ['|',('tests', '=', False),('state', 'in', ['cancel'])]}" colspan="1" groups="test_management.group_test_manager"/>
            </field>
        </field>
    </record>
</odoo>
